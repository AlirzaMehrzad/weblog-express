<!--blog start-->
<section class="section-gap">
    <div class="container">
        <div class="row justify-content-between">
         {{>sidebar}}
            <div class="col-lg-8">
               
               {{# each posts}}
                <div class="blog-post">
                    <a href="#"><img class="rounded mb-lg-5 mb-4" src="/static/assets/img/blog/b1.jpg" alt="card image"></a>
                    <h3 class=""><a href="/p/{{this.slug}}">{{this.title}}</a></h3>
                    <div class="meta font-lora my-4">
                        <a href="#">{{this.full_name}}</a>
                        <span class="meta-separator"></span>
                        <a href="#">{{this.jalali_date}}</a>
                    </div>
                    <p>{{this.exceprt}}</p>
                    </div>
                {{/each}}
                <div class="pagination justify-content-center">
                    <a href="/?page={{pagination.prevPage}}" class="btn btn-dark {{#showDisabaled pagination.hasPrevPage}}{{/showDisabaled}}"><i class="fa fa-angle-left"></i></a>
                    <div class="h6 mt-2 mx-4">
                        {{pagination.page}}از {{pagination.totalPages}}
                    </div>
                    <a href="/?page={{pagination.nextPage}}" class="btn btn-dark {{#showDisabaled pagination.hasNextPage}}{{/showDisabaled}}"><i class="fa fa-angle-right"></i></a>
                </div>
          
            </div>
        </div>
    </div>
</section>
<!--blog end-->
